{
  "name": "vscode-markdown-ide",
  "displayName": "Markdown IDE",
  "version": "0.2.1",
  "description": "IDE-grade tooling for Markdown: refactoring and autocompletion",
  "publisher": "kevgo",
  "contributes": {
    "commands": [
      {
        "command": "markdownIDE.renameDocumentTitle",
        "title": "Rename document title",
        "category": "Markdown IDE"
      },
      {
        "command": "markdownIDE.tikibaseFix",
        "title": "Tikibase Fix all issues",
        "category": "Markdown IDE"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "markdownIDE.renameDocumentTitle",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "Markdown IDE",
      "properties": {
        "markdownIDE.autocomplete.titleRegex": {
          "type": "string",
          "description": "A regular expression that captures the part of linked document titles to use as the link title."
        },
        "markdownIDE.tikibase.enabled": {
          "type": "boolean",
          "description": "Tikibase is a linter for Markdown-based knowledge bases."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevgo/vscode-markdown-ide"
  },
  "bugs": {
    "url": "https://github.com/kevgo/vscode-markdown-ide/issues"
  },
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "documentation/tiki_head_square.jpg",
  "keywords": [
    "markdown",
    "development",
    "refactoring",
    "autocompletion"
  ],
  "badges": [
    {
      "url": "https://github.com/kevgo/vscode-markdown-ide/actions/workflows/main.yml/badge.svg",
      "href": "https://github.com/kevgo/vscode-markdown-ide/actions/workflows/main.yml",
      "description": "build status"
    }
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "license": "ISC",
  "scripts": {
    "vscode:prepublish": "make --no-print-directory build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.18",
    "@types/vscode": "1.64.0",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "@vscode/test-electron": "2.1.3",
    "assert-no-diff": "3.0.6",
    "eslint": "8.9.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "mocha": "9.2.0",
    "text-runner": "5.0.1",
    "textrun-make": "0.1.1",
    "ts-node": "10.5.0",
    "typescript": "4.5.5",
    "vsce": "2.6.7"
  }
}
